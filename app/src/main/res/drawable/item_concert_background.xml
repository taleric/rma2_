<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <gradient
        android:angle="45"
        android:startColor="@color/white"
        android:endColor="@color/defaultImageBackground"
        android:type="linear" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/primaryColor" />

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
