<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddEditActivity">

    <!-- ImageView for 'Slika' with default image -->
    <ImageView
        android:id="@+id/slikaImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@drawable/default_image"
        android:layout_marginBottom="16dp"/>

    <!-- Buttons to upload image and take photo next to each other -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upload Image"
            style="@style/ButtonPrimary"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/takePhotoButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Take Photo"
            style="@style/ButtonPrimary"/>
    </LinearLayout>

    <!-- EditText fields -->
    <EditText
        android:id="@+id/nazivEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Naziv"
        style="@style/PrimaryEditText"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/izvođačEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Izvođač"
        style="@style/PrimaryEditText"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/lokacijaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lokacija"
        style="@style/PrimaryEditText"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/datumEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Datum"
        style="@style/PrimaryEditText"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/opisEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Opis"
        style="@style/PrimaryEditText"
        android:layout_marginBottom="16dp"/>

    <!-- Buttons to save and cancel next to each other -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            style="@drawable/button_primary"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            style="@drawable/button_primary"/>
    </LinearLayout>

</LinearLayout>
